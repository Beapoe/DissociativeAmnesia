<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ReadParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Read"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/Contents"
                    style="@style/Buttons"
                    android:layout_weight="1"
                    android:onClick="Contents_OnClick"
                    android:text="@string/Contents"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/Previous"
                    style="@style/Buttons"
                    android:layout_weight="1"
                    android:onClick="Previous_OnClick"
                    android:text="@string/Previous"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/Next"
                    style="@style/Buttons"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Next_OnClick"
                    android:text="@string/Next"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/BlowUp"
                    style="@style/Buttons"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="BlowUp_OnClick"
                    android:text="@string/BlowUp"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/Minificate"
                    style="@style/Buttons"
                    android:layout_weight="1"
                    android:onClick="Minificate_OnClick"
                    android:text="@string/Minificate"
                    tools:ignore="VisualLintButtonSize" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>